<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.scanner_sdk.customview.single.view.SingleScannerView
        android:id="@+id/singleScannerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/camera_bottom_tabs"
        />

    <com.example.scanner_sdk.customview.multi.view.MultiScannerView
        android:id="@+id/multiScannerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/camera_bottom_tabs"
        />

    <com.example.scanner_sdk.customview.auth.AuthScannerView
        android:id="@+id/authScannerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/camera_bottom_tabs"
        />

    <!-- Camera Bottom Navigation Tabs -->
    <LinearLayout
        android:id="@+id/camera_bottom_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingVertical="12dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/nav_single_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/single_scan_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_qr_code_scanner"
                app:tint="@color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/single_scan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single Scan"
                android:textSize="12sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_authentication"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/authentication_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_shield"
                app:tint="@color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/authentication_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Authentication"
                android:textSize="12sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_multi_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/multi_scan_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_multi_scan"
                app:tint="@color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/multi_scan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multi Scan"
                android:textSize="12sp"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>