<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardBackgroundColor="#0F0F0F"
    app:strokeColor="#33FFFFFF"
    app:strokeWidth="1dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top badges -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBarcodeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#4DA3FF"
                android:background="@drawable/bg_chip_blue"
                android:paddingHorizontal="14dp"
                android:paddingVertical="6dp"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/txtAuthStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Authentic Product"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_chip_green"
                android:paddingHorizontal="14dp"
                android:paddingVertical="6dp"/>
        </LinearLayout>

        <!-- Scanned Code -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Raw Data"
            android:textColor="#AAAAAA"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txtRawValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginTop="4dp"/>

        <!-- GS1 Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ðŸ“¦ GS1 Parsed Data"
            android:textColor="#AAAAAA"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/containerParsedValues"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
