<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Camera preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/multiPreviewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:implementationMode="performance"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.example.scanner_sdk.customview.multi.MultiOverlayView
        android:id="@+id/multiOverlayView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="@id/multiPreviewView"
        app:layout_constraintBottom_toBottomOf="@id/multiPreviewView"
        app:layout_constraintStart_toStartOf="@id/multiPreviewView"
        app:layout_constraintEnd_toEndOf="@id/multiPreviewView"
        tools:ignore="MissingClass" />

    <!-- Top Header -->
    <LinearLayout
        android:id="@+id/multi_top_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/multiTxtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Single Scan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="start"
            android:layout_marginStart="16dp" />

        <ImageButton
            android:id="@+id/multi_btn_gallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_gallery"
            android:contentDescription="Gallery"
            android:scaleType="centerInside"
            android:padding="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>