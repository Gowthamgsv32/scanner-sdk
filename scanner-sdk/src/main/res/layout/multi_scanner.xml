<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Camera preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/multiPreviewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:implementationMode="performance"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.example.scanner_sdk.customview.multi.MultiOverlayView
        android:id="@+id/multiOverlayView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="@id/multiPreviewView"
        app:layout_constraintBottom_toBottomOf="@id/multiPreviewView"
        app:layout_constraintStart_toStartOf="@id/multiPreviewView"
        app:layout_constraintEnd_toEndOf="@id/multiPreviewView"
        tools:ignore="MissingClass" />

    <!-- Top Header -->
    <LinearLayout
        android:id="@+id/multi_top_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageButton
            android:id="@+id/multi_btn_flash_toggle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_bg"
            android:src="@drawable/ic_flash_off"
            android:contentDescription="Gallery"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/multi_btn_camera_switch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_bg"
            android:layout_marginHorizontal="12dp"
            android:src="@drawable/ic_camera_switch"
            android:contentDescription="Gallery"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/multi_btn_gallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_bg"
            android:src="@drawable/ic_gallery"
            android:contentDescription="Gallery"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/multi_btn_history"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_bg"
            android:src="@drawable/ic_history"
            android:layout_marginHorizontal="12dp"
            android:contentDescription="Gallery"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/multi_btn_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_bg"
            android:src="@drawable/ic_settings"
            android:contentDescription="Gallery"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="6dp"
        android:padding="4dp"
        android:background="@drawable/rounded_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/multiZoomPlus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_add"
            app:tint="@color/white"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/multiZoomPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0X"
            android:textColor="@color/white"
            android:layout_marginVertical="6dp"
            />
        <ImageView
            android:id="@+id/multiZoomMinus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_minus"
            app:tint="@color/white"
            android:padding="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/scanCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scanned Count : "
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="6dp"
        android:background="@drawable/rounded_bg"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>